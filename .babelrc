{
  "presets": [
    "es2015",
    "es2016",
    "es2017"
  ],
  "plugins": [
    "add-module-exports"
  ],
  "env": {
    "karma": {
      "plugins": [
        "add-module-exports",
        [
          "istanbul",
          {
            "exclude": [
              "**/*_spec.js"
            ]
          }
        ],
        "rewire"
      ]
    }
  }
}